<Window x:Class="RevisingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevisingWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid x:Name="myGrid" MouseUp="myMouseUpEvent" Background="AliceBlue">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center"  Text="Hello, WPF!" VerticalAlignment="Center"/>
        <Button FontWeight="Bold"   Margin="219,210,116.4,36.8" Click="myButtonClick">
            <WrapPanel>
                <TextBlock Foreground="Blue">Multi</TextBlock>
                <TextBlock Foreground="Red">Color</TextBlock>
            </WrapPanel>
        </Button>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Center" Margin="10" TextWrapping="Wrap"  VerticalAlignment="Top">This is a TextBlock <Hyperlink NavigateUri="https://www.google.com" RequestNavigate="Hyperlink_RequestNavigate">control</Hyperlink>  and it comes with a very long text</TextBlock >
        <StackPanel HorizontalAlignment="Left" Height="161" Margin="26,43,0,0" VerticalAlignment="Top" Width="151">
            <Label x:Name="name" Content="_Name:" Margin="5" Target="{Binding ElementName=enterName}" Padding="5"/>
            <TextBox x:Name="enterName" Height="23" TextWrapping="Wrap" Margin="5,0" Padding="5,0" />

            <Label x:Name="email" Content="_Email:" Margin="5" Padding="5" Target="{Binding ElementName=enterEmail}" RenderTransformOrigin="0.495,1.685"/>
            <TextBox x:Name="enterEmail" Height="23" Padding="5, 0" TextWrapping="Wrap" Margin="5,0" />

        </StackPanel>
    </Grid>
</Window>
