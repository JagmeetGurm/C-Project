<Window x:Class="RevisingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevisingWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid x:Name="myGrid"  Background="AliceBlue">
        <StackPanel HorizontalAlignment="Left" Height="148" Margin="41,25,0,0" VerticalAlignment="Top" Width="392"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="81" Margin="44,26,0,0" VerticalAlignment="Top" Width="287" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.564"/>
                    <RotateTransform/>
                    <TranslateTransform Y="1.014"/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <Label x:Name="labelFirstName" Content="First Name : " Margin="0,0,0,50.6" Width="100" FontSize="16"/>
        </StackPanel>
        <Label x:Name="labelLastName" Content="Last Name :" HorizontalAlignment="Left" Margin="149,25,0,212.4"  Width="100" FontSize="16"/>


    </Grid>
</Window>
