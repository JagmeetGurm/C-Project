<Window x:Class="BasicCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="625">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="376" Width="570"/>
        <Button x:Name="button1" Content="1" Margin="39,65,0,0" Width="60" RenderTransformOrigin="0.066,-0.669" Height="60" Click="button1_Click" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="button2" Content="2" Margin="107,66,0,0" Width="60" RenderTransformOrigin="0.459,0.383" Height="60" Click="button1_Click" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-1.218"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="button3" Content="3" Margin="179,65,0,0" Width="60" Height="60" Click="button1_Click" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="button4" Content="4" HorizontalAlignment="Left" Margin="41,155,0,0" VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.5,0.5" Height="60" Click="button1_Click" FontSize="24">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-1.547"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="button5" Content="5" HorizontalAlignment="Left" Margin="112,157,0,0" VerticalAlignment="Top" Width="60" Height="60" Click="button1_Click" FontSize="24"/>
        <Button x:Name="button6" Content="6" HorizontalAlignment="Left" Margin="182,156,0,0" VerticalAlignment="Top" Width="60" RenderTransformOrigin="-1.08,1.555" Height="60" Click="button1_Click" FontSize="24">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.824"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="button7" Content="7" HorizontalAlignment="Left" Margin="52,236,0,0" VerticalAlignment="Top" Width="44" Height="54" Click="button1_Click" FontSize="24"/>
        <Button x:Name="button8" Content="8" HorizontalAlignment="Left" Margin="112,236,0,0" VerticalAlignment="Top" Width="49" Height="54" Click="button1_Click" FontSize="24"/>
        <Button x:Name="button9" Content="9" HorizontalAlignment="Left" Margin="175,239,0,0" VerticalAlignment="Top" Width="66" RenderTransformOrigin="0.5,0.5" Height="48" Click="button1_Click" FontSize="24">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-1.325"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="buttonClear" Content="c" Margin="256,65,0,0" Width="60" Height="60" Click="buttonClear_Click" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="buttonAdd" Content="+" HorizontalAlignment="Left" Margin="256,161,0,0" VerticalAlignment="Top" Width="72" Height="41" Click="buttonAdd_Click" FontSize="24"/>
        <Button x:Name="buttonSub" Content="-" HorizontalAlignment="Left" Margin="350,222,0,0" VerticalAlignment="Top" Width="47" Height="54" Click="buttonSub_Click" FontSize="24"/>
        <Button x:Name="buttonMult" Content="*" Margin="340,65,0,0" Width="60" Height="60" Click="buttonMult_Click" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="buttonDiv" Content="/" HorizontalAlignment="Left" Margin="340,161,0,0" VerticalAlignment="Top" Width="55" Height="41" Click="buttonDiv_Click" FontSize="24"/>
        <Button x:Name="buttonZero" Content="0" HorizontalAlignment="Left" Margin="259,236,0,0" VerticalAlignment="Top" Width="69" Height="54" Click="button1_Click" FontSize="24"/>
        <Button x:Name="buttonDot" Content="." Margin="402,65,0,0" Width="60" Height="60" Click="buttonDot_Click" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="buttonEqual" Content="=" HorizontalAlignment="Left" Margin="412,161,0,0" VerticalAlignment="Top" Width="37" Height="41" Click="buttonEqual_Click" FontSize="24"/>
        <TextBox x:Name="Result" HorizontalAlignment="Left" Height="40" Margin="130,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198"/>

    </Grid>
</Window>
